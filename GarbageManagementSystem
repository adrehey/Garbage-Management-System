package GarbageManagementSystem;
import java.util.Scanner;

public class GarbageManagementSystem {

    static Scanner sc = new Scanner(System.in);

    // Arrays to store data
    static String[] areas = new String[100];
    static String[] notes = new String[100];
    static boolean[] collected = new boolean[100];
    static int count = 0;

public static void main(String[] args) {
    System.out.println("Welcome to Garbage Management");
    System.out.print("\n\n");
    System.out.println("Press 1 to continue.");
    
    while (true) {
        String input = sc.nextLine().trim();  // Use nextLine() here for consistency
        if (input.equals("1")) {
            break;
        } else {
            System.out.println("Please press 1 to continue.");
        }
    }
    
    while (true) {
        System.out.println("School Garbage Tracker");
        System.out.println("1. Add Garbage Report");
        System.out.println("2. Mark Area as Collected");
        System.out.println("3. View Uncollected Areas");
        System.out.println("4. Exit");
        System.out.print("Choose option: ");
        String choice = sc.nextLine().trim();
        switch (choice) {
            case "1": addReport(); break;
            case "2": markCollected(); break;
            case "3": viewUncollected(); break;
            case "4": System.out.println("Exiting..."); return;
            default: System.out.println("Invalid choice.");
        }
    }
}
    static void addReport() {
        if (count >= 100) {
            System.out.println("Maximum reports reached.");
            return;
        }
        System.out.print("Enter area name: ");
        areas[count] = sc.nextLine().trim();

        System.out.print("Optional note: ");
        notes[count] = sc.nextLine().trim();

        collected[count] = false; // not yet collected
        count++;

        System.out.println("Report added successfully!");
    }

    // 2. Mark Area as Collected
    static void markCollected() {
        System.out.print("Enter area name to mark as collected: ");
        String areaName = sc.nextLine().trim();
        boolean found = false;

        for (int i = 0; i < count; i++) {
            if (areas[i].equalsIgnoreCase(areaName) && !collected[i]) {
                collected[i] = true;
                found = true;
                System.out.println("Area marked as collected!");
            }
        }

        if (!found) {
            System.out.println("No uncollected report found for this area.");
        }
    }

    // 3. View Uncollected Areas
    static void viewUncollected() {
        System.out.println("\n=== Uncollected Garbage Reports ===");
        boolean any = false;
        for (int i = 0; i < count; i++) {
            if (!collected[i]) {
                any = true;
                System.out.println("Area: " + areas[i] + " | Note: " + notes[i]);
            }
        }
        if (!any) {
            System.out.println("All areas are clean. No uncollected garbage.");
        }
    }
}